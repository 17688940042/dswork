<?xml version="1.0" encoding="UTF-8"?> 
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<context-param>
		<param-name>log4jConfiguration</param-name>
		<param-value>classpath:config/log4j2.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.apache.logging.log4j.web.Log4jServletContextListener</listener-class>
	</listener>
	
	<filter>
		<filter-name>sso</filter-name>
		<filter-class>dswork.cas.CasFilter</filter-class>
		<init-param>
			<param-name>validateURL</param-name>
			<param-value>http://127.0.0.1:8888/CasServer/validate.htm</param-value>
		</init-param>
		<init-param>
			<param-name>loginURL</param-name>
			<param-value>http://sso:8888/CasServer/login.htm</param-value>
		</init-param>
		<init-param>
			<param-name>ignoreURL</param-name>
			<param-value>/menu.jsp,/m.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>sso</filter-name>
		<url-pattern>/manage/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sso</filter-name>
		<url-pattern>/1.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sso</filter-name>
		<url-pattern>/2.html</url-pattern>
	</filter-mapping>

	<filter>
		<filter-name>DsworkCasAuthFilter</filter-name>
		<filter-class>dswork.cas.AuthFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>DsworkCasAuthFilter</filter-name>
		<url-pattern>/p/*</url-pattern>
	</filter-mapping>
	
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
</web-app>
