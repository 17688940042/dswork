<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
	"-//ibatis.apache.org//DTD Mapper 3.0//EN" 
	"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="dswork.ep.model.DsCmsCategory">

<insert id="insert" parameterType="dswork.ep.model.DsCmsCategory">
	<selectKey resultType="Long" order="AFTER" keyProperty="id">
		select LAST_INSERT_ID()
	</selectKey>
	insert into DS_CMS_CATEGORY
	(ID, PID, SITEID, NAME, FOLDER, STATUS, URL, IMG, KEYWORDS, CONTENT, SEQ, VIEWSITE, VIEWAPP, PAGEVIEWSITE, PAGEVIEWAPP)
	values
	(null, <if test="null==pid or 0&gt;=pid">null</if><if test="0 &lt; pid">#{pid}</if>, #{siteid}, #{name}, #{folder}, #{status}, #{url}, #{img}, #{keywords}, #{content}, #{seq}, #{viewsite}, #{viewapp}, #{pageviewsite}, #{pageviewapp})
</insert>

<delete id="delete">
	delete from DS_CMS_CATEGORY where ID=#{id}
</delete>

<update id="update" parameterType="dswork.ep.model.DsCmsCategory">
	update DS_CMS_CATEGORY set
		PID=<if test="null==pid or 0&gt;=pid">null</if><if test="0 &lt; pid">#{pid}</if>,
		NAME=#{name},
		FOLDER=#{folder},
		URL=#{url},
		IMG=#{img},
		VIEWSITE=#{viewsite},
		VIEWAPP=#{viewapp},
		PAGEVIEWSITE=#{pageviewsite},
		PAGEVIEWAPP=#{pageviewapp}
	where ID=#{id}
</update>
<update id="updateSeq">
	update DS_CMS_CATEGORY set SEQ=#{seq} where ID=#{id}
</update>
<update id="updateContent">
	update DS_CMS_CATEGORY set KEYWORDS=#{keywords}, CONTENT=#{content} where ID=#{id}
</update>

<resultMap id="result" type="dswork.ep.model.DsCmsCategory">
	<id property="id" column="ID" />
	<result property="pid" column="PID" />
	<result property="siteid" column="SITEID" />
	<result property="name" column="NAME" />
	<result property="folder" column="FOLDER" />
	<result property="status" column="STATUS" />
	<result property="url" column="URL" />
	<result property="img" column="IMG" />
	<result property="keywords" column="KEYWORDS" />
	<result property="content" column="CONTENT" />
	<result property="seq" column="SEQ" />
	<result property="viewsite" column="VIEWSITE" />
	<result property="viewapp" column="VIEWAPP" />
	<result property="pageviewsite" column="PAGEVIEWSITE" />
	<result property="pageviewapp" column="PAGEVIEWAPP" />
</resultMap>

<sql id="columns">
	ID, PID, SITEID, NAME, FOLDER, STATUS, URL, IMG, KEYWORDS, CONTENT, SEQ, VIEWSITE, VIEWAPP, PAGEVIEWSITE, PAGEVIEWAPP
</sql>

<sql id="dynamicWhere">
	<where>
		<if test="@Ognl@isNotEmpty(siteid)"> SITEID=#{siteid} </if>
		<if test="@Ognl@isNotEmpty(pid)">
			<if test="0 &lt; pid"> and PID=#{pid} </if>
			<if test="0 &gt;= pid"> and PID is null </if>
		</if>
		<if test="@Ognl@isNotEmpty(name)"> and NAME like concat('%',#{name},'%') </if>
		<if test="@Ognl@isNotEmpty(folder)"> and FOLDER=#{folder} </if>
		<if test="@Ognl@isNotEmpty(status)"> and STATUS=#{status} </if>
	</where>
</sql>

<select id="select" resultMap="result">
	select <include refid="columns" /> from DS_CMS_CATEGORY where ID=#{id}
</select>

<select id="query" resultMap="result">
	select <include refid="columns" /> from DS_CMS_CATEGORY
	<include refid="dynamicWhere" /> order by SEQ
</select>

<select id="queryCount" resultType="int">
	select count(1) from DS_CMS_CATEGORY
	<include refid="dynamicWhere" />
</select>

</mapper>
